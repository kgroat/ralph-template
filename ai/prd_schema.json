{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "category": {"type": "string" },
          "description": {"type": "string" },
          "steps": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          },
          "passes": { "type": "boolean"}
        },
        "required": ["category", "description", "steps", "passes"]
      }
    }
  },
  "required": ["tasks"]
}