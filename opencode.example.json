{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": {
      "model": "github-copilot/gpt-5-mini",
      "permission": {
        "write": "deny",
        "edit": "deny",
        "bash": "deny"
      }
    },
    "design.md": {
      "description": "Agent that is good for generating design documents",
      "model": "github-copilot/gpt-5-mini",
      "prompt": "{file:ai/prompts/design.example.md}"
    },
    "prd.json": {
      "description": "Agent that is good for generating Product Requirement Documents",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:ai/prompts/prd.example.md}"
    },
    "ralph": {
      "description": "Agent that completes a single task from a plan",
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "question": "deny"
      }
    },
  }
}
